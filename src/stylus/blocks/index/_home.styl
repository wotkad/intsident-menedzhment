#home
	margin-top 80px
.home-overlay
	position absolute
	background-color rgba(0,0,0,.8)
	width 100%
	height calc(100vh - 80px)
.home
	background url(/images/home-bg.jpg) 50% 50% no-repeat
	width 100%
	height calc(100vh - 80px)
	&__leftblock
		background-color rgba(0,0,0,.6)
		height calc(100vh - 80px)
		width 230px
		position absolute
		left 0
		top 0
	&__rightblock
		height calc(100vh - 80px)
		width 230px
		position absolute
		right 0
		top 0
		&-text
			position absolute
			left -15px
			top 50%
			&-content
				text-transform uppercase
				font-size 0.75rem
				color $white
				opacity .6
				letter-spacing 1px
				line-height 11px
				font-family Light
				transform rotate(90deg)
				position relative
				&:before
					content ''
					position absolute
					display inline-block
					width 150px
					height 1px
					background-color rgba(255,255,255,.6)
					left 50px
					top 50%
				&:after
					content ''
					position absolute
					display inline-block
					width 150px
					height 1px
					background-color rgba(255,255,255,.6)
					right 50px
					top 50%
	&__centerblock
		justify-content center
		flex-direction column
		display flex
		z-index 4
		position relative
		height calc(100vh - 80px)
		&-title
			margin-bottom 20px
			h1
				color $white
				line-height 59px
				font-size 3.875rem
				font-family Regular
		&-desc
			font-size 2rem
			color $white
			width 70%
			font-family Regular
			line-height 38px
			margin-bottom 40px
		&-li
			margin-bottom 25px
			font-size 1.125rem
			line-height 17px
			font-family Medium
			color $white
			svg
				margin-right 12px
		&-buttons
			display flex
			&-button
				margin-top 25px
				position relative
				cursor pointer
				width 300px
				height 55px
				&:before
					content 'Узнать подробнее'
					position absolute
					background-color $red
					width 300px
					height 55px
					color $white
					font-family Bold
					line-height 11px
					font-size 0.75rem
					top 0
					z-index 2
					display flex
					align-items center
					justify-content center
					transition .3s
				&:after
					content ''
					position absolute
					display inline-block
					background-color #890018
					top 8px
					width 300px
					height 55px
					z-index 1
				&:hover&:before
					top 4px
			&-download
				color $white
				font-family Regular
				font-size 0.75rem
				line-height 11px
				margin-top 25px
				display flex
				align-items center
				justify-content center
				position relative
				cursor pointer
				width 300px
				height 55px
				transition .3s
				& span
					margin-left 5px
				&:hover
					color $red
@media(max-width: 1140px)
	#home
		margin-top 60px
	.home-overlay
		height calc(100vh - 60px)
	.home
		height calc(100vh - 60px)
		&__leftblock
			display none
		&__rightblock
			display none

@media(max-width: 767px)
	.home
		&__centerblock
			&-desc
				width 100%
			&-buttons
				flex-wrap wrap
				&-button
					width 100%
					&:before
						width 100%
					&:after
						width 100%
				&-download
					width 100%
			&-li
				line-height 24px
				svg
					margin-bottom -4px
@media(max-width: 516px)
	.home
		&__centerblock
			&-title
				margin-top 20px
@media(max-width: 414px)
	.home
		&__centerblock
			&-title
				margin-top 20px
				margin-bottom 0
				h1
					font-size 2.875rem
			&-desc
				margin-bottom 20px
			&-li
				margin-bottom 10px
