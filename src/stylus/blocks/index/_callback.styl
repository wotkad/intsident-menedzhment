.callbackblock-overlay
	position absolute
	background-color rgba(0,0,0,.7)
	width 100%
	height 100%
.callbackblock
	background url(/images/callback-bg.jpg) 50% 50% no-repeat
	width 100%
	margin-top -80px
	&__content
		padding 150px 0
		align-items center
		display flex
		justify-content space-between
		&-desc
			color $white
			z-index 3
			flex-basis 50%
			p
				font-family Regular
				margin-right 5px
				font-size 2rem
				line-height 38px
				display inline-block
			span
				font-size 2rem
				line-height 38px
				font-family Medium
			&:nth-child(1)
				border-left 5px solid $red
				padding-left 35px
			&:nth-child(2)
				display flex
				justify-content center
				flex-direction column
				align-items flex-end
		&-button
			position relative
			cursor pointer
			z-index 3
			width 380px
			height 55px
			&:before
				content 'Узнать подробнее'
				position absolute
				background-color $red
				width 380px
				height 55px
				color $white
				font-family Bold
				line-height 11px
				font-size 0.75rem
				top 0
				z-index 2
				display flex
				align-items center
				justify-content center
				transition .3s
			&:after
				content ''
				position absolute
				display inline-block
				background-color #890018
				top 8px
				width 380px
				height 55px
				z-index 1
			&:hover&:before
				top 4px
			&-desc
				margin-top 70px
				flex-basis 100%
				z-index 3
				font-size 1rem
				line-height 23px
				letter-spacing 1px
				font-family Regular
				color rgba(255,255,255,.6)
				text-align center
@media(max-width: 1040px)
	.callbackblock
		margin 0
		padding-bottom 40px
		&__content
			flex-wrap wrap
			padding 40px 0
			&-desc
				flex-basis 100%
				&:nth-child(2)
					margin-top 20px
			&-button
				width 100%
				&:before
					width 100%
				&:after
					width 100%
