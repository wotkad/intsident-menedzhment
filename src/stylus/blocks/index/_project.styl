#project
	margin-top -80px
.project
	width 100%
	.projectblock
		background-color $white
		display flex
		padding 50px 45px
		flex-wrap wrap
		z-index 2
		position relative
		&__title
			font-family Medium
			font-size 2rem
			line-height 38px
			color $text
			flex-basis 100%
			margin-bottom 28px
		&__list
			flex-basis 30%
			display flex
			flex-wrap wrap
			&-item
				flex-basis 100%
				font-family Medium
				font-size 1rem
				line-height 23px
				color $text
				& i
					color $red
				& span
					margin-left 20px
		&__text
			flex-basis 70%
			font-family Regular
			font-size 1rem
			line-height 23px
			color $text
			& p
				margin 10px
@media(max-width:768px)
	.project
		.projectblock
			&__list
				flex-basis 100%
			&__text
				flex-basis 100%
