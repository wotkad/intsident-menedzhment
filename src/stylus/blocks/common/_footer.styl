.footer-overlay
	position absolute
	background-color rgba(0,0,0,.8)
	width 100%
	height 100%
.footer
	background url(/images/footer-bg.jpg) 50% 50% no-repeat
	width 100%
	&__leftblock
		background-color rgba(0,0,0,.6)
		height 100%
		width 230px
		position absolute
		left 0
		top 0
	.footerblock
		position relative
		z-index 3
		padding 150px 0 0
		display flex
		justify-content space-between
		flex-wrap wrap
		&__content
			display flex
			flex-direction column
			margin-bottom 70px
			&-title
				font-size 2rem
				font-family Regular
				line-height 38px
				color $white
				border-left 3px solid $red
				padding-left 36px
				margin-bottom 32px
			&:nth-child(1)
				flex-basis 70%
			&:nth-child(2)
				flex-basis 30%
			&-li
				font-size 1.125rem
				line-height 17px
				margin-bottom 25px
				color $white
				p
					margin-left 18px
					font-family Light
					display inline-block
				span
					margin-left 5px
					font-family Medium
				a
					margin-left 5px
					color $white
					font-family Light
					display inline-block
					color $white
					transition .3s
					&:hover
						color $red
			&-form
				button
					position relative
					cursor pointer
					border none
					z-index 3
					width 100%
					height 55px
					background-color $red
					color $white
					font-family Bold
					line-height 11px
					font-size 0.75rem
					transition .3s
					&:hover
						background-color $white
						color $red
				&-input input
					width 100%
					padding 15px 19px
					box-shadow none
					font-family Regular
					font-size 1rem
					line-height 23px
					color $text
					margin-bottom 20px
					border 1px solid $white
					transition .3s
					&:hover,
					&:focus
						border 1px solid $red
				&-policy
					margin-top 15px
					p
						color $white
						opacity .6
						font-family Regular
						font-size 0.75rem
						line-height 17px
						display inline
						margin-right 3px
					a
						opacity 1
						color $white
						font-family Regular
						font-size 0.75rem
						line-height 17px
						display inline-block
						border-bottom 1px solid $white
						transition .3s
						&:hover
							border-color $red
		&__copy
			flex-basis 100%
			border-top 1px solid rgba(255,255,255,.2)
			display flex
			justify-content space-between
			&-logo
				font-size 1.5rem
				color $white
				line-height 23px
				font-family Light
				padding 30px 0
			&-text
				font-size 1rem
				line-height 23px
				padding 30px 0
				font-family Light
				color $white
				opacity .6
@media(max-width: 1040px)
	.footer__leftblock
		display none
	.footer
		.footerblock
			padding 40px 0 0
			&__content
				margin-bottom 20px
				&:nth-child(1)
					flex-basis 100%
				&:nth-child(2)
					flex-basis 100%
				&-li
					font-size 1rem
					p
						margin-left 4px
					svg
						margin-bottom -4px
