.popup-overlay
	position fixed
	z-index -1
	top 0
	left 0
	width 100%
	opacity 0
	background-color rgba(0,0,0,.7)
	height 100%
	transition .3s
	cursor pointer
.popup
	background-color $white
	padding 50px 45px
	position fixed
	opacity 0
	z-index -1
	height 480px
	width 380px
	top calc(50% - 240px)
	left calc(50% - 190px)
	transition .3s
	&__container
		position relative
		width 100%
		height 100%
		&-title
			font-size 2rem
			font-family Medium
			color $text
			line-height 38px
			width 50%
			margin-bottom 30px
		&-close
			position absolute
			right 0
			cursor pointer
			top 0
			svg
				path
					transition .3s
				&:hover path
					fill $black
		&-form
			button
				position relative
				cursor pointer
				border none
				z-index 3
				width 100%
				height 55px
				border 1px solid $red
				color $red
				background-color $white
				font-family Bold
				line-height 11px
				font-size 0.75rem
				transition .3s
				&:hover
					background-color $red
					color $white
			&-input input
				width 100%
				border 1px solid #ECECEC
				padding 15px 19px
				box-shadow none
				font-family Regular
				font-size 1rem
				line-height 23px
				color $text
				margin-bottom 20px
				transition .3s
				&:hover,
				&:focus
					border 1px solid $red
			&-policy
				margin-top 15px
				text-align center
				p
					color $text
					opacity .6
					font-family Regular
					font-size 0.75rem
					line-height 17px
					display inline
					margin-right 3px
				a
					opacity 1
					color $red
					font-family Regular
					font-size 0.75rem
					line-height 17px
					display inline-block
					border-bottom 1px solid $red
					transition .3s
					&:hover
						border-color $black
